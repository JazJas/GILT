{
  "name": "gilt",
  "displayName": "GILT",
  "description": "GILT is a prototype in-IDE LLM information support tool. It is designed to help programmers understand the code they are working on by providing explanations of the code. GILT is capable of generating on-demand information while considering the userâ€™s local code context, by incorporating it into the LLM prompts. Its original version (https://github.com/namdy0429/GILT) only supports OpenAI and requires an OpenAI API key. It now supports local LLMs through Ollama.",
  "version": "1.0.0-beta",
  "repository": "https://github.com/JazJas/GILT",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Machine Learning",
    "Education"
  ],
  "keywords": [
    "AI",
    "OpenAI",
    "GPT",
    "Ollama"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "GILT.createExp",
        "title": "Create Explanation",
        "icon": "$(hubot)"
      },
      {
        "command": "GILT.updateAPIKey",
        "title": "Update OpenAI API Key",
        "icon": "$(pencil)"
      },
      {
        "command": "GILT.removeAPIKey",
        "title": "Remove OpenAI API Key from secret storage",
        "icon": "$(error)"
      },
      {
        "command": "GILT.telemetry.DumpLog",
        "title": "Dump Telemetry Log",
        "category": "GILT"
      },
      {
        "command": "GILT.telemetry.ClearLog",
        "title": "Clear Telemetry Log",
        "category": "GILT"
      },
      {
        "command": "GILT.telemetry.log",
        "title": "Log Telemetry Event (internal)",
        "category": "GILT"
      }
    ],
    "configuration": {
      "title": "GILT",
      "properties": {
        "gilt.llmProvider": {
          "type": "string",
          "enum": ["openai", "ollama"],
          "default": "ollama",
          "description": "Choose the LLM provider"
        },
        "gilt.ollamaUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "URL for Ollama API"
        },
        "GILT.org": {
          "type": "string",
          "default": null,
          "markdownDescription": "The [organization](https://beta.openai.com/account/org-settings) value from OpenAI"
        },
        "GILT.chatModel": {
          "type": "string",
          "default": "llama3.1:latest",
          "markdownDescription": "The model to use for chat completions"
        },
        "GILT.model": {
          "type": "string",
          "default": "llama3.1:latest",
          "markdownDescription": "The model to use for text completions"
        },
        "GILT.codeModel": {
          "type": "string",
          "default": "codestral:22b-v0.1-q6_K",
          "markdownDescription": "The model to use for code completions"
        },
        "GILT.maxTokens": {
          "type": "number",
          "default": 2048,
          "minimum": 1,
          "markdownDescription": "The maximum number of [tokens](https://beta.openai.com/docs/introduction/overview) for each text request to GPT"
        },
        "GILT.codeMaxTokens": {
          "type": "number",
          "default": 2048,
          "minimum": 1,
          "markdownDescription": "The maximum number of [tokens](https://beta.openai.com/docs/introduction/overview) for each code request to GPT"
        },
        "GILT.temperature": {
          "type": "number",
          "default": 0.2,
          "minimum": 0,
          "maximum": 1,
          "markdownDescription": "The [temperature](https://beta.openai.com/docs/api-reference/completions/create#completions/create-temperature) of each text request to GPT. Must be between 0 and 1"
        },
        "GILT.codeTemperature": {
          "type": "number",
          "default": 0.1,
          "minimum": 0,
          "maximum": 1,
          "markdownDescription": "The [temperature](https://beta.openai.com/docs/api-reference/completions/create#completions/create-temperature) of each code request to GPT. Must be between 0 and 1"
        },
        "telemetry.active": {
          "title": "Activate telemetry? (requires restart)",
          "type": "boolean",
          "default": false,
          "minimum": 0,
          "description": "Activate telemetry? (requires restart)"
        }
      }
    },
    "keybindings": [
      {
        "command": "GILT.createExp",
        "key": "alt+a",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gilt-vscode-plugin",
          "title": "GILT",
          "icon": "media/logo.png"
        }
      ]
    },
    "views": {
      "gilt-vscode-plugin": [
        {
          "type": "webview",
          "id": "gilt-vscode-plugin.view",
          "name": "GILT"
        }
      ]
    }
  },
  "dependencies": {
    "@ts-stack/markdown": "^1.4.0",
    "highlight.js": "^11.7.0",
    "indent-string": "^5.0.0",
    "json5": "^2.2.3",
    "openai": "^3.2.0",
    "winston": "^3.8.2"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "author": "Jason Xie",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/JazJas/GILT/issues"
  },
  "homepage": "https://github.com/JazJas/GILT#readme",
  "pricing": "Free",
  "publisher": "Jason Xie",
  "galleryBanner": {
    "color": "#D79D58"
  }
}
